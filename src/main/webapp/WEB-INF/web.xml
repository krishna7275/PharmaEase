<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
            http://xmlns.jcp.org/xml/ns/javaee
            http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- ======================================================
       BASIC APP CONFIG
  ======================================================= -->
  <display-name>PharmaEase</display-name>

  <!-- Force UTF-8 request encoding -->
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <!-- ======================================================
       SERVLET DECLARATIONS
  ======================================================= -->

  <!-- Authentication -->
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>

  <!-- Dashboard -->
  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <!-- Pharmacist -->
  <servlet>
    <servlet-name>PharmacistServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.PharmacistServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PharmacistServlet</servlet-name>
    <url-pattern>/pharmacist</url-pattern>
  </servlet-mapping>

  <!-- Supplier -->
  <servlet>
    <servlet-name>SupplierServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.SupplierServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SupplierServlet</servlet-name>
    <url-pattern>/supplier</url-pattern>
  </servlet-mapping>

  <!-- Medicine -->
  <servlet>
    <servlet-name>MedicineServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.MedicineServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MedicineServlet</servlet-name>
    <url-pattern>/medicine</url-pattern>
  </servlet-mapping>

  <!-- Inventory -->
  <servlet>
    <servlet-name>InventoryServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.InventoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InventoryServlet</servlet-name>
    <url-pattern>/inventory</url-pattern>
  </servlet-mapping>

  <!-- Stock Batch -->
  <servlet>
    <servlet-name>StockBatchServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.StockBatchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StockBatchServlet</servlet-name>
    <url-pattern>/batch</url-pattern>
  </servlet-mapping>

  <!-- Customers -->
  <servlet>
    <servlet-name>CustomerServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.CustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/customer</url-pattern>
  </servlet-mapping>

  <!-- Orders -->
  <servlet>
    <servlet-name>OrderServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.OrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderServlet</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>

  <!-- Billing -->
  <servlet>
    <servlet-name>BillingServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.BillingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BillingServlet</servlet-name>
    <url-pattern>/billing</url-pattern>
  </servlet-mapping>

  <!-- Reports -->
  <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>com.pharmaease.controller.ReportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/reports</url-pattern>
  </servlet-mapping>


  <!-- ======================================================
       SESSION CONFIG
  ======================================================= -->
  <!-- Session timeout: 45 minutes -->
  <session-config>
    <session-timeout>45</session-timeout>
  </session-config>


  <!-- ======================================================
       ERROR HANDLING
  ======================================================= -->
  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>


  <!-- ======================================================
       WELCOME PAGE
  ======================================================= -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
